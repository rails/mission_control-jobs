<% navigation(title: "#{jobs_status.titleize} jobs", section: "#{jobs_status}_jobs".to_sym) %>

<% if @jobs_page.empty? %>
  <%= blank_status_notice "There are no #{jobs_status} jobs ðŸ˜Œ" %>
<% else %>
  <div class="level">
    <%= render "mission_control/jobs/failed_jobs/filter", job_classes: @job_classes, queue_names: @queue_names %>
    <%= render "mission_control/jobs/failed_jobs/toolbar", jobs_count: @jobs_count %>
  </div>

  <table class="jobs failed table queues is-hoverable is-fullwidth">
    <tbody>
    <thead>
    <tr>
      <th style="width: 35%;">Job</th>
      <th style="width: 40%;">Error</th>
      <th></th>
    </tr>
    </thead>

    <%= render partial: "mission_control/jobs/failed_jobs/job", collection: @jobs_page.jobs %>

    </tbody>
  </table>

  <%= render "mission_control/jobs/shared/pagination_toolbar", jobs_page: @jobs_page %>
<% end %>

